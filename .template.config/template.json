{
  "$schema": "http://json.schemastore.org/template",
  "author": "Eduardo Yago Vicent",
  "classifications": [ "Microservice", "DDD", "CA", "API" ],
  "identity": "CA_DDD_MS",
  "name": "CA DDD Microservice",
  "shortName": "ca-ddd-ms",
  "description": "A template for a Microservice solution API following CleanArchitecture(CA) and DomainDirvenDesign(DDD).",
  "sourceName": "CA_DDD_MS_Template",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".vs/**", ".git/**", ".gitattributes", ".gitignore", "README.md", "clean_install.sh" ]
        }
      ]
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0"
        },
        {
          "choice": "net7.0"
        },
        {
          "choice": "net6.0"
        }
      ],
      "replaces": "{TargetFramework}",
      "defaultValue": "net8.0"
    }
  }
}